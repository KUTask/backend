{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "src",
  "testRegex": ".spec.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^src/(.*)$": "<rootDir>/$1"
  },
  "coverageReporters": ["text"],
  "coveragePathIgnorePatterns": [".interceptor.ts$", "/node_modules/"],
  "testTimeout": 10000
}
